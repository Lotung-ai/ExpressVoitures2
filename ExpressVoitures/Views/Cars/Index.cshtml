@using Microsoft.Extensions.Localization
﻿@using ExpressVoitures.Models.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@using ExpressVoitures.Resources
@inject IViewLocalizer Localizer
@model IEnumerable<ExpressVoitures.Models.Entities.Car>

@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["DateOfPurchase"]
                </th>
                <th>
                    @Localizer["PurchasePrice"]
                </th>
                <th>
                    @Localizer["Repair"]
                </th>
                <th>
                    @Localizer["RepairPrice"]
                </th>
                <th>
                    @Localizer["DateOfAvailabilityForSale"]
                </th>
                <th>
                    @Localizer["SellingPrice"]
                </th>
                <th>
                    @Localizer["DateOfSale"]
                </th>
                <th>
                    @Localizer["BrandId"]
                </th>
                <th>
                    @Localizer["ModelId"]
                </th>
                <th>
                    @Localizer["YearId"]
                </th>
                <th>
                    @Localizer["FinitionId"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfPurchase)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchasePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Repair)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RepairPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfAvailabilityForSale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellingPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfSale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modele.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Finition.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
